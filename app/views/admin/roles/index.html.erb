<div class="container">
  <h1>Roles</h1>

  <div class="actions">
    <% if policy(Role).create? %>
      <%= link_to "New role", new_admin_role_path, data: { turbo_frame: "modal" }, class: "button" %>
    <% end %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>System</th>
        <th>Permissions</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr id="role_<%= role.id %>">
          <td><%= role.name %></td>
          <td>
            <% if role.system? %>
              <span class="badge">System</span>
            <% end %>
          </td>
          <td><%= role.permissions.size %></td>
          <td>
            <%= link_to "View", admin_role_path(role) %>
            <% unless role.system? %>
              <% if policy(role).update? %>
                | <%= link_to "Edit", edit_admin_role_path(role) %>
              <% end %>
              <% if policy(role).destroy? %>
                | <%= button_to "Delete", admin_role_path(role), method: :delete, data: { turbo_confirm: "Delete this role?" } %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


